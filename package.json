{
  "name": "pocketmcp-workspace",
  "version": "1.0.0",
  "description": "PocketMCP with Web Tester - Monorepo",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc && pnpm --filter @pocketmcp/api build && pnpm --filter @pocketmcp/web build",
    "dev": "concurrently \"pnpm --filter @pocketmcp/api dev\" \"pnpm --filter @pocketmcp/web dev\"",
    "dev:mcp": "NODE_ENV=development TRANSPORT=both WATCH_DIR=./kb tsx src/cli.ts",
    "start": "NODE_ENV=production TRANSPORT=both WATCH_DIR=./kb node dist/cli.js",
    "setup": "cp .env.sample .env && echo 'Created .env file from .env.sample. Please customize it for your needs.'",
    "clean": "rm -rf dist && rm -rf data/*.db* && pnpm --filter @pocketmcp/api clean && pnpm --filter @pocketmcp/web clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@9.15.4+sha512.b2dc20e2fc72b3e18848459b37359a32064663e5627a51e4c74b2c29dd8e8e0491483c3abb40789cfd578bf362fb6ba8261b05f0387d76792ed6e23ea3b1b6a0",
  "dependencies": {
    "@huggingface/transformers": "^3.7.2",
    "@modelcontextprotocol/sdk": "^1.17.4",
    "better-sqlite3": "^12.2.0",
    "chokidar": "^4.0.3",
    "dotenv": "^17.2.1",
    "fast-glob": "^3.3.3",
    "mammoth": "^1.10.0",
    "p-limit": "^7.1.1",
    "sqlite-vec": "0.1.7-alpha.2",
    "unpdf": "^1.2.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "concurrently": "^9.1.0",
    "jest": "^30.1.1",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
